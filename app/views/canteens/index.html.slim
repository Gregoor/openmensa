.row
  .span8
    section
      header
        h2
          = t :my_canteens
          ul.actions
            li
              = link_to new_user_canteen_path(@user), title: t(:add_canteen) do
                i.icon-plus-sign

      .content
        - if @canteens.any?
          table
            - @canteens.each do |c|
              tr
                td: i class=canteen_state_icon(c.fetch_state)
                td=c.name
                td=c.address
                td.actions
                  = link_to edit_canteen_path(c), title: t(:edit_canteen) do
                    i.icon-pencil
        - else
          p.add_notice= t :notice, :no_canteens


  = render partial: 'users/nav'
