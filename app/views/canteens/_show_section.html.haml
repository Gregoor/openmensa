
%header.page-header
  = link_to canteen_path(@canteen, date: (@date - 1.day)), remote: true, 'data-push' => 'true', class: :prev do
    %span
  = link_to canteen_path(@canteen, date: (@date + 1.day)), remote: true, 'data-push' => 'true', class: :next do
    %span
  %h2.centered
    - if @date.to_date == Time.zone.now.to_date
      = t :today
    - else
      = l @date.to_date, format: :with_weekday
%ul.meals
  = render partial: "meals", object: @canteen.meals.on(@date)

-if @date == Time.zone.now.to_date
  %header.page-header
    %h3.centered= l (@date + 1.day).to_date, format: :with_weekday
  %ul.meals
    = render partial: "meals", object: @canteen.meals.on(@date + 1.day)
