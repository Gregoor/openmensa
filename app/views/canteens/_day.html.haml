- if day.nil?
  %li
    %h3= t(:no_meals_title)
    %p= t(:no_meals_message)
- elsif day.closed?
  %li
    %h3= t(:closed_day_title)
    %p= t(:closed_day_message)
- else
  - day.meals.group_by(&:category).each do |category, meals|
    %li
      - meals.each_with_index do |meal, index|
        %div.meal
          - if index == 0
            %h3= category
          %p= meal.name
          %div
            - if meal.prices.size > 0
              %ul.prices
