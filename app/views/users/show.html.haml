.row
  .span8
    %section
      %header
        %h2= t :my_profile
      .content
        = render partial: "common/flash", object: flash[:user]
        = form_for @user do |f|
          %p
            = f.label :name, t(:profile, :name)
            = f.text_field :name
          %p
            = f.label :email, t(:profile, :email)
            = f.text_field :email
          %p
            %input{type: "submit", value: t(:save)}
    %section
      %header
        %h2= t(:my_identities)
      %div.content.identities
        - @user.identities.each do |identity|
          = render partial: 'identity', object: identity
        %p
          = link_to t(:add_identity), new_user_identity_path(@user), class: 'btn icon-plus'


  = render partial: 'nav'
